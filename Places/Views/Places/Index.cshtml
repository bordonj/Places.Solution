<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Hello Friend!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  @using Places.Models;\
  <head>
    <div class="container">
      <h2>Places You've Been List</h2>
      @if (Model.Count == 0) 
        {
          <p>There are no places in the list.</p>
        }
      <ul>
        @foreach (Place place in Model)
          {
            <!-- <li>@place.PlaceName</li> -->
            <li><a href='/places/@place.Id'>@place.PlaceName</a></li>
    <!-- updated this so each Item is a link to that Item detail page -->
          }
        </ul>

      <a href="/places/new">Add a new place.</a>

      <form action="/places/delete" method="post">
      <button class="btn btn-primary" type="submit" name="button">Clear All Places- Start Fresh!</button>
      </form>
    </div>
  </body>
</html>

